<!--This model line represents the data model that passes to View later -->
@model IEnumerable<Product>

<h2>Products</h2>
<table class="table"
       <tr>
           <th>ID</th>
           <th>Name</th>
           <th>Price</th>
           <th>Category ID</th>
           <th>On Sale</th>
           <th>Stock Level</th>
       </tr>
    <!--For each Product contained in Model, display the product info on the View page -->
    @foreach (var product in Model)
    {
     <tr>
         <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>
         <td>@product.Name</td>
         <td>@product.Price</td>
         <td>@product.CategoryID</td>
         <td>@product.OnSale</td>
         <td>@product.StockLevel</td>
     </tr>
    }
</table>
